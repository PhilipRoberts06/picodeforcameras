<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Camera 1 Feed</title>
    <style>
        /* Ensure the feed fits naturally on the screen */
        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #000; /* Black background for fullscreen effect */
        }

        .camera-feed {
            /* Display the image at its natural resolution */
            width: auto;
            height: auto;
            max-width: 100%; /* Prevent overflow horizontally */
            max-height: 100%; /* Prevent overflow vertically */
        }

        /* Style for the FPS counter */
        #fps-counter {
            position: absolute;
            top: 5px;
            right: 5px;
            background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
            color: white;
            font-size: 12px;
            font-family: Arial, sans-serif;
            padding: 5px 10px;
            border-radius: 5px;
            text-shadow: 1px 1px 2px black; /* Black stroke for visibility */
            z-index: 10;
        }
    </style>
</head>
<body>
    <!-- FPS Counter -->
    <div id="fps-counter">FPS: 15</div>

    <!-- Fullscreen Camera Feed -->
    <img id="camera-feed-1" src="http://aveiashq.mycrestron.com:22222/snap.jpeg?rand=0" class="camera-feed" alt="Camera Feed 1">

    <script>
        let fps = 15; // Desired FPS
        const frameInterval = 1000 / fps; // Interval in milliseconds for 15 FPS
        const fpsCounter = document.getElementById('fps-counter');
        const cameraFeed = document.getElementById('camera-feed-1');

        // Function to reload the camera feed image
        function reloadImage() {
            const timestamp = new Date().getTime();
            cameraFeed.src = `http://aveiashq.mycrestron.com:22222/snap.jpeg?rand=${timestamp}`;
        }

        // Function to update the FPS counter
        function updateFPS() {
            fpsCounter.textContent = `FPS: ${fps}`;
        }

        // Main loop to refresh the image and update FPS
        setInterval(() => {
            reloadImage();
            updateFPS();
        }, frameInterval);
    </script>
</body>
</html>
