<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Camera 1 Feed</title>
    <style>
        /* Ensure the body takes up the full viewport */
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #000;
        }

        /* Container to fix the resolution */
        #camera-container {
            width: 1920px;
            height: 1080px;
            position: relative; /* For the FPS counter */
            background-color: #000;
        }

        /* Camera feed styles */
        .camera-feed {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Prevent stretching or cropping */
        }

        /* FPS Counter styles */
        #fps-counter {
            position: absolute;
            top: 10px;
            right: 10px;
            color: white;
            font-size: 14px;
            font-family: Arial, sans-serif;
            text-shadow: 1px 1px 3px black;
            z-index: 10;
        }
    </style>
</head>
<body>
    <!-- Fixed container for 1920x1080 resolution -->
    <div id="camera-container">
        <!-- FPS Counter -->
        <div id="fps-counter">FPS: 15</div>

        <!-- Camera Feed -->
        <img id="camera-feed-1" src="http://aveiashq.mycrestron.com:22222/snap.jpeg?rand=0" class="camera-feed" alt="Camera Feed 1">
    </div>

    <script>
        let fps = 15; // Set the desired FPS
        const frameInterval = 1000 / fps; // Interval in milliseconds for 15 FPS
        const fpsCounter = document.getElementById('fps-counter');
        const cameraFeed = document.getElementById('camera-feed-1');

        // Function to reload the camera feed image
        function reloadImage() {
            const timestamp = new Date().getTime();
            cameraFeed.src = `http://aveiashq.mycrestron.com:22222/snap.jpeg?rand=${timestamp}`;
        }

        // Function to update the FPS counter
        function updateFPS() {
            fpsCounter.textContent = `FPS: ${fps}`;
        }

        // Main loop to refresh the image and update FPS
        setInterval(() => {
            reloadImage();
            updateFPS();
        }, frameInterval);
    </script>
</body>
</html>
